---
import '@fontsource-variable/gabarito';
import '@fontsource-variable/open-sans/wght-italic.css';

import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
import { ViewTransitions } from 'astro:transitions';
const { title, description } = Astro.props

---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta property="og:image" content="/myself.avif">
		<link rel="icon" type="image/svg+xml" href="/myself.avif" />
		<meta name="generator" content={Astro.generator} />

		<link rel="sitemap" href="/sitemap-index.xml" />

		<link rel="stylesheet" href="../css/styles.css">

		<link rel="stylesheet" href="../css/counter.css">
		
		<ViewTransitions />
		
		<title>{title}</title>
		<meta name="description" content={description} />
		<script type="application/ld+json">
			{
			"@context": "https://schema.org",
			"@type": "Organization",
			"name": "CyberSG",
			"url": "https://cybersg.dev",
			"logo": "https://cybersg.dev/images/myself.avif",
			"description": "CyberSG is a Freelancer Web Developer with ilustrations and graphic skills to solve your digital problems. Contact me today to discuss your project!",
			"contactPoint": {
				"@type": "ContactPoint",
				"contactType": "customer service",
				"email": "luissalas2706@gmail.com"
			},
			"sameAs": [
				"https://www.instagram.com/cybersg_zero/",
				"https://www.linkedin.com/in/cybersg/",
				 "https://github.com/CyberSG-Zero"
			]
			}
		</script>
	</head>
	<body>
		<div class="cursor"></div>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
		<script defer src="../js/mouse.js" client:only="react"></script>
	</body>
</html>


